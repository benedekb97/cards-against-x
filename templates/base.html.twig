<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <header class="d-flex flex-wrap justify-content-center py-3 mb-4">
                <a href="{{ path('index') }}" class="display-6 page-header d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">Cards Against X</a>
                <div class="dropdown text-end">
                    <button class="btn d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        {{ locale.getCurrentLocaleIcon | raw }}
                    </button>
                    <ul class="dropdown-menu dropdown-menu-dark text-small">
                        {% for localeCode in locale.availableLocales %}
                            <li>
                                <a href="{{ path('change_locale', {'localeCode': localeCode}) }}" class="dropdown-item">
                                    {{ locale.getLocaleIcon(localeCode) | raw }} {{ locale.getLocaleName(localeCode) }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </header>
            {% block body %}{% endblock %}
            <div class="row justify-content-center">
                <div class="col-md-12" style="text-align:center;">
                    <a href="{{ path('disclaimer') }}">Dis<b><i><u>c</u></i></b>laimer</a> | <a target="_blank" href="{{ path('help') }}">{% trans %}base.footer.help{% endtrans %}</a><br>
                    <span data-bs-placement="top" data-bs-toggle="tooltip" title="Updated 2023-05-30">Version 1.0</span>
                </div>
            </div>
        </div>
        {% block modals %}{% endblock %}
    </body>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</html>
