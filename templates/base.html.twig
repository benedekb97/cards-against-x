<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <h1 class="page-header">
                <a href="{{ path('index') }}">Cards Against X</a>
            </h1>
            {% block body %}{% endblock %}
            <div class="row justify-content-center">
                <div class="col-md-12" style="text-align:center;">
                    <a href="{{ path('disclaimer') }}">Dis<b><i><u>c</u></i></b>laimer</a> | <a target="_blank" href="{{ path('help') }}">Help</a><br>
                    <span data-bs-placement="top" data-bs-toggle="tooltip" title="Updated 2023-05-30">Version 1.0</span>
                </div>
            </div>
        </div>
    </body>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</html>
